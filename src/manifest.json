{
  "manifest_version": 3,
  "name": "Change Background Color",
  "version": "2.0.0",
  "description": "change the current site background and font color",
  "permissions": ["scripting", "activeTab", "storage"],

  "icons": {
    "64": "bg-color64.png",
    "128": "bg-color128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "bg-color64.png",
      "128": "bg-color128.png"
    }
  }
}
